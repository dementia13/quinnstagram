<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quinnstagram" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:icon">@drawable/icon</item>
    </style>
    <style name="toolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@drawable/nav_logo_whiteout</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="displayOptions">useLogo</item>
        <item name="icon">@drawable/ufi_heart</item>
    </style>
    <style name="bottombarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="displayOptions">showCustom</item>
        <item name="icon">@drawable/instagram_home_outline_24</item>
    </style>
</resources>